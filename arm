package armstrong;

public class Armstrong {
	
	public static void main(String[] args) {
		int toChecknumber = 452;
		int temp = toChecknumber;
		int result = 0;
		int remender = 0;
		
		while(temp !=0) {
			remender = temp%10;
			result = result+(remender*remender*remender);
			temp = temp/10;
			
		}

		if(result==toChecknumber) 
			System.out.println("given number " + toChecknumber + " is armstrong number");
		
		else 
			System.out.println("given number " + toChecknumber + " is not armstrong number");
		
		
	}

}
